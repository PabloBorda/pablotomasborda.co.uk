<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lastname</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Mobile</th>
    <th>Roles</th>
    <th>Pic</th>
    <th>Email</th>
    <th>Accounts</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.lastname %></td>
    <td><%=h user.address %></td>
    <td><%=h user.phone %></td>
    <td><%=h user.mobile %></td>
    <td><%=h user.roles_id %></td>
    <td><%=h user.pic %></td>
    <td><%=h user.email %></td>
    <td><%=h user.accounts_id %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

